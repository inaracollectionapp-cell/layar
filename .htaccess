# ISOLA SCREEN - Apache Configuration

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /isolascreen/
    
    # EXCEPTION: Skip rewrite untuk webhook dan file penting
    RewriteCond %{REQUEST_URI} ^/isolascreen/(tripay-webhook|payment-callback|tes-webhook|test-email|debug-qr|email-functions)\.php [NC]
    RewriteRule . - [L]
    
    # Remove .php extension dari URLs
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+)$ $1.php [L]
    
    # Optional: Redirect .php requests ke clean URLs
    RewriteCond %{THE_REQUEST} \s/+(.*?)\.php[\s?] [NC]
    RewriteRule ^ /%1 [R=301,L,NE]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS untuk Tripay callback
    <Files "payment-callback.php">
        Header always set Access-Control-Allow-Origin "*"
        Header always set Access-Control-Allow-Methods "POST, OPTIONS"
        Header always set Access-Control-Allow-Headers "X-Callback-Signature, X-Callback-Event, Content-Type"
    </Files>
</IfModule>

# Handle CORS preflight untuk callback
<Files "payment-callback.php">
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</Files>

# PHP Configuration
<IfModule mod_php7.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

# Disable Directory Browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "(composer\.json|composer\.lock|package\.json|\.sql|\.log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# KECUALI: tripay_callback.log untuk debugging (bisa dihapus setelah production)
# <Files "tripay_callback.log">
#     Order allow,deny
#     Deny from all
# </Files>

# Allow access to assets
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|css|js|mp4|webm|pdf)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Pastikan payment-callback.php bisa diakses oleh Tripay
<Files "payment-callback.php">
    Order allow,deny
    Allow from all
    Satisfy any
</Files>

# Compress files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType video/mp4 "access plus 1 year"
</IfModule>

# Error Pages
ErrorDocument 404 /isolascreen/404.php
ErrorDocument 500 /isolascreen/500.php